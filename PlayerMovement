using System.Collections;
using System.Collections.Generic;
using UnityEditor;
using UnityEngine;

public class PlayerMovement : MonoBehaviour
{
    Rigidbody rb;
    public float speed, sensitivity, jumpStrength;
    public float rotationX, rotationY;
    public GameObject cam;
    // Start is called before the first frame update
    void Start()
    {
        Cursor.lockState = CursorLockMode.Locked;
        rb = gameObject.GetComponent<Rigidbody>();
    }

    // Update is called once per frame
    void Update()
    {
        cam.GetComponent<Camera>().fieldOfView = 90 + rb.velocity.magnitude;
        rotationX -= Input.GetAxis("Mouse Y") * sensitivity;
        rotationY += Input.GetAxis("Mouse X") * sensitivity;
        cam.transform.rotation = Quaternion.Euler(rotationX, rotationY, 0);
        transform.rotation = Quaternion.Euler(0, rotationY, 0);
        if (Input.GetKey(KeyCode.W)) 
        {
            rb.velocity += transform.forward * Time.deltaTime * speed / (rb.velocity.magnitude+1);
        }
        if (Input.GetKey(KeyCode.A))
        {
            rb.velocity -= transform.right * Time.deltaTime * speed / (rb.velocity.magnitude+1);
        }
        if (Input.GetKey(KeyCode.S))
        {
            rb.velocity -= transform.forward * Time.deltaTime * speed / (rb.velocity.magnitude +1);
        }
        if (Input.GetKey(KeyCode.D))
        {
            rb.velocity += transform.right * Time.deltaTime * speed / (rb.velocity.magnitude + 1);   
        }
        RaycastHit hit;
        Physics.Raycast(transform.position, -transform.up, out hit, 5f);

        if (Input.GetKeyDown(KeyCode.Space))
        {
            if (hit.collider != null)
            {
                    rb.velocity += transform.up * jumpStrength;
            }
        }
    }
}
